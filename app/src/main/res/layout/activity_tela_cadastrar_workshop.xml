<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.ufpi.es.eventyacademic.visao.TelaCadastrarWorkshop"
    android:layout_margin="10dp"
    >


    <TextView
        android:id="@+id/textNomeTelaLoginUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:text="Cadastrar Workshop" />

    <EditText
        android:id="@+id/editTextNomeWorkshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textNomeTelaLoginUser"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Nome Workshop"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextMinistranteWorkshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Ministrante"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextDataHoraWorkshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="Data/Hora"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextLocalWorkshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="Local"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editDescricaoWorkshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:hint="Descrição"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/buttonCriarWorkshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editDescricaoWorkshop"
        android:layout_marginStart="14dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/editDescricaoWorkshop"
        android:text="Criar" />

    <Button
        android:id="@+id/buttonVoltarWorkshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonCriarWorkshop"
        android:layout_alignBottom="@+id/buttonCriarWorkshop"
        android:layout_alignEnd="@+id/textNomeTelaLoginUser"
        android:layout_marginEnd="11dp"
        android:text="Voltar" />




</RelativeLayout>
